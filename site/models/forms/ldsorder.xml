<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="ldsorder">
        <field name="dealer_number"
               type="text"
               label="COM_LDS_DEALER"
               description="COM_LDS_DEALER_DESC"
               class="inputbox"
               size="10"
               required="true"
                />

        <field name="customer_number"
               type="text"
               label="COM_LDS_CUSTOMER"
               description="COM_LDS_CUSTOMER_DESC"
               class="inputbox"
               size="10"
               required="true"
                />

        <field name="ind_number"
               type="text"
               label="COM_LDS_IND"
               description="COM_LDS_IND_DESC"
               class="inputbox"
               size="4"
                />

        <field id="ordertype"
               name="ordertype"
               type="list"
               label="COM_LDS_ORDER_TYPE"
               description="COM_LDS_ORDER_TYPE_DESC"
               class="select"
               size="1"
               required="true"
                >
            <option value="1">
                COM_LDS_ORDER_TYPE_1</option>
            <option value="2">
                COM_LDS_ORDER_TYPE_2</option>
            <option value="3">
                COM_LDS_ORDER_TYPE_3</option>
        </field>

        <field name="from_version"
               type="text"
               label="COM_LDS_FROM_VERSION_DESC"
               description="COM_LDS_FROM_VERSION_DESC"
               class="inputbox"
               size="10"
               required="true"
                />

        <field name="to_version"
               type="text"
               label="COM_LDS_TO_VERSION_DESC"
               description="COM_LDS_TO_VERSION_DESC"
               class="inputbox"
               size="10"
               required="true"
                />

        <field name="desired_date"
               type="calendar"
               label="COM_LDS_DESIRED_DATE"
               description="COM_LDS_DESIRED_DATE_DESC"
               class="inputbox"
               size="22"
               format="%Y-%m-%d %H:%M:%S"
               filter="user_utc"
                />

        <field name="maintenance"
               type="text"
               label="COM_LDS_TO_MAINTENANCE_DESC"
               description="COM_LDS_MAINTENANCE_DESC"
               class="inputbox"
               size="10"
                />

        <field name="maintenance_till"
               type="text"
               label="COM_LDS_TO_MAINTENANCE_TILL_DESC"
               description="COM_LDS_MAINTENANCE_TILL_DESC"
               class="inputbox"
               size="10"
                />

        <field name="cost"
               type="text"
               label="COM_LDS_COST"
               description="COM_LDS"
               class="inputbox"
               size="10"
                />

        <field name="coder"
               type="text"
               label="COM_LDS_CODER"
               description="COM_LDS_CODER"
               class="inputbox"
               size="10"
                />

        <field name="remarks"
               type="textarea"
               label="COM_LDS_REMARKS"
               description="COM_LDS_REMAKRS"
               class="textarea"
               size="10"
                />

        <field name="status"
               type="hidden"
               default="1"
                />
    </fieldset>
</form>
